doctype html
html.no-js
    include includes/head
    body
        .hidden.blur.animated.bounceIn
        .main-wrapper
            main.content
                    form(name="login-form", id="login_form", method="post", action="/login")
                        .row
                            .col-md-12
                                p.text-center
                                    input(type="text", placeholder="Логин", name="username")

                            .col-md-12
                                p.text-center
                                    input(type="password", placeholder="Пароль", name="password")

                        p.text-center
                            button(type="submit") Войти
                            span.help-block.error

                    p.text-center
                        a.button(href="/") На главную

        include includes/footer
